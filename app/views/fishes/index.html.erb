<h1> Liste des poissons </h1>
<div class="cards">
  <% @fishes.each do |fish|%>
    <div class="flex-item">
      <% if fish.photo.attached? %>
        <div class="card-category" style= "background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path fish.photo.key %>')">
          <%= fish.name %>
        </div>
      <% end %>
      <%= link_to 'See more', fish_path(fish), class: 'btn btn-gradient btn-sm'%>
      <%= link_to 'Change picture', '#', class: 'btn btn-gradient btn-sm' %>
    </div>
  <% end %>
</div>
