<h1> Liste des poissons disponibles à la location</h1>
<div class="row">
  <div class="cards col-8">
    <% @fishes.each do |fish|%>
        <div class="flex-item card">
          <%= link_to fish_path(fish) do %>
            <% if fish.photo.attached? %>
              <div class="card-category" style= "background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path fish.photo.key %>')">
                <%= fish.name %>
                <div class="card-actions">
                  <%= fish.price_per_week %> €/semaine
                  <%= fish.city %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
    <% end %>
  </div>

<div class="col-4" id="map" style="width: 50%; height: 450px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
</div>
