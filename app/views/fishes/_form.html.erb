<%= simple_form_for @fish, url: fishes_path, method: :post do |f| %>
  <%= f.input :name %>
  <%= f.input :price_per_week %>
  <%= f.input :colour %>
  <%= f.input :length %>
  <%= f.input :available, as: :boolean, input_html: {value: true}  %>
  <%= f.input :fish_type_id, label_method: :common_name, collection: FishType.all %>
  <%= f.input :comment, as: :text %>
  <%= f.button :submit %>
<% end %>
