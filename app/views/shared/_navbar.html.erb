  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">

<%# https://res.cloudinary.com/drzg8kw0k/image/upload/v1610720267/fishbnb/clown-fish_dvzxof.png %>

    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Proposer votre poisson rouge à la location", new_fish_path, class: "nav-link" %>
        </li>

        <li class="nav-item active">
          <%= link_to "Nos poissons rouges", fishes_path, class: "nav-link" %>
        </li>

          <li class="nav-item dropdown">
            <%= image_tag "https://res.cloudinary.com/drzg8kw0k/image/upload/v1610720267/fishbnb/clown-fish_dvzxof.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% unless user_signed_in? %>
              <%= link_to "Se connecter", new_user_session_path, class: "dropdown-item" %>
              <%= link_to "S'inscrire", new_user_registration_path, class: "dropdown-item" %>
            <% else %>
              <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            <% end %>
          </div>
        </li>
      <% else %>
        <li class="nav-item active">
          <%= link_to "Se connecter", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "S'inscrire", new_user_registration_path, class: "nav-link" %>
